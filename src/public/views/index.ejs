<body>
<div class="login">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 desc">
            <div class="row">
                <% if (device !== 'phone') { %>
                    <div class="col text-start">
                        <div class="social">
                            <%- include('social', {device: device}); %>
                        </div>
                    </div>
                <% } %>
                <div class="col text-end">
                    <% if (user) { %>
                        <form action="/api/auth/logout" method="post">
                            <div class="player-selectors">
                                <%- include('tournament', {tournaments: tournaments}); %>
                                <%- include('unit', {units: units}); %>
                            </div>
                            <label class="user"><%= user.username %></label>
                            <button class="btn logout" type="submit"><p class="bi bi-box-arrow-right" style="display:inline"></p></button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                    <% } else{ %>
                        <form action="/api/auth/login" method="get">
                            <div class="player-selectors">
                                <%- include('tournament', {tournaments: tournaments}); %>
                            </div>
                            <button class="btn login" type="submit"><p class="bi bi-box-arrow-in-left"> Войти</p></button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="player" id="player">
    <div class="container">
        <% if (user) { %>
            <h1 class="text-center">Игроки</h1>
        <% } %>
        <div class="col-lg-12 col-md-12 col-sm-12 desc">
            <table id="player-table" data-editable="true"></table>
        </div>
    </div>
</div>

<div id="player-window" class="modal fade" tabindex="-1"></div>

<div id="player-signup-window" class="modal fade" tabindex="-1">
    <%- include('signup', { kind: 'modal', states: states, regions: regions, cities: cities } ); %>
</div>

